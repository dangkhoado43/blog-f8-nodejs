<div class='my-4'>
    <div>
        <h2>Create Course</h2>
        <form method='post' action='/courses/store'>
            <div class='mb-3'>
                <label for='name' class='form-label'>Name</label>
                <input
                    type='text'
                    name='name'
                    class='form-control'
                    id='name'
                    placeholder='Name...'
                />
            </div>
            <div class='mb-3'>
                <label for='description' class='form-label'>Description</label>
                <textarea
                    name='description'
                    class='form-control'
                    id='description'
                    placeholder='Description...'
                ></textarea>
            </div>
            <div class='mb-3'>
                <label for='videoId' class='form-label'>Video ID</label>
                <input
                    type='text'
                    name='videoId'
                    class='form-control'
                    id='videoId'
                    placeholder='Video Id...'
                />
            </div>
            <button type='submit' class='btn btn-primary'>Create</button>
        </form>
    </div>
</div>