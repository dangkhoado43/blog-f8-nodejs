<div class='my-4'>
    <div>
        <h2>Update Course</h2>
        <form method='post' action='/courses/{{course._id}}?_method=PUT'>
            <div class='mb-3'>
                <label for='name' class='form-label'>Name</label>
                <input
                    type='text'
                    name='name'
                    class='form-control'
                    id='name'
                    placeholder='Name...'
                    value='{{course.name}}'
                />
            </div>
            <div class='mb-3'>
                <label for='description' class='form-label'>Description</label>
                <textarea
                    name='description'
                    class='form-control'
                    id='description'
                    placeholder='Description...'
                >{{course.description}}</textarea>
            </div>
            <div class='mb-3'>
                <label for='videoId' class='form-label'>Video ID</label>
                <input
                    type='text'
                    name='videoId'
                    class='form-control'
                    id='videoId'
                    placeholder='Video Id...'
                    value='{{course.videoId}}'
                />
            </div>
            <button type='submit' class='btn btn-success'>Update</button>
            <a
                role='button'
                href='/user/courses'
                class='btn btn-danger'
            >Cancel</a>
        </form>
    </div>
</div>